{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "es2017",
      "ESNext",
      "ESNext.Array",
      "DOM",
      "DOM.Iterable",
      "WebWorker"
    ],
    "allowJs": true,
    "checkJs": true,
    "strict": false,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": [],
    "declaration": true,
    "emitDeclarationOnly": true,
    "removeComments": true
  },
  "include": [
    "core",
    "utils"
  ],
  "exclude": [
    "node_modules",
    "TMP"
  ]
}